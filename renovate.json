{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "preview:dockerVersions"
  ],
  "configMigration": true,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "helm-values": {
    "managerFilePatterns": [
      "/(^|/).*?-?values\\.ya?ml$/"
    ]
  },
  "packageRules": [
    {
      "description": "Only allow stable Ceph versions (x.2.y) - ignore development (x.0.y) and release candidate (x.1.y) versions",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["quay.io/ceph/ceph"],
      "allowedVersions": "/^v\\d+\\.2\\.\\d+$/"
    }
  ]
}
